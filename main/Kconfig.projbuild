menu "Gateway Misc Configuration"
    depends on GATEWAY_ENABLE

    menu "Button Configuration"
        config GPIO_BUTTON_SW1
            default 5 if IDF_TARGET_ESP32S3 || IDF_TARGET_ESP32C3
            default "34"
            int "GPIO button of switch"
